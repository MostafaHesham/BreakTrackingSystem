@model BT.Services.Models.EmployeeTimeSheetModels.EmployeeTimeSheetModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmployeeTimeSheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InTime" class="control-label"></label>
                <input asp-for="InTime" class="form-control" />
                <span asp-validation-for="InTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutTime" class="control-label"></label>
                <input asp-for="OutTime" class="form-control" />
                <span asp-validation-for="OutTime" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="TotalWorkInMin" class="control-label"></label>
                <input asp-for="TotalWorkInMin" class="form-control" />
                <span asp-validation-for="TotalWorkInMin" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="TotalBreakInMin" class="control-label"></label>
                <input asp-for="TotalBreakInMin" class="form-control" />
                <span asp-validation-for="TotalBreakInMin" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="TotalOverTimeInMin" class="control-label"></label>
                <input asp-for="TotalOverTimeInMin" class="form-control" />
                <span asp-validation-for="TotalOverTimeInMin" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CalculateOverTime" /> @Html.DisplayNameFor(model => model.CalculateOverTime)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNightShift" /> @Html.DisplayNameFor(model => model.IsNightShift)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
